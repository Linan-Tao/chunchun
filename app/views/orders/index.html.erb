<p id="notice"><%= notice %></p>

<h3>
  订单列表
</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">订单号</th>
      <th scope="col">价格</th>
      <th scope="col">状态</th>
      <th scope="col">创建时间</th>
      <th scope="col">付款时间</th>
      <th scope="col">客户</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order|%>
    <tr>
      <td><%= link_to order.code, order_path(order) %></td>
      <td><%= order.price %></td>
      <td><%= Order::STATUS[order.status.to_sym] %></td>
      <td><%= order.created_at.localtime %></td>
      <td><%= order.pay_time %></td>
      <td><%= order.visitor.nickname %></td>
    </tr>
    <% end %>
  </tbody>
</table>