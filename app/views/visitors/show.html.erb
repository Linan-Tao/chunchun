<p id="notice"><%= notice %></p>
<p>
  <%= image_tag @visitor.headshot, height: '80px', width: '80px', class: 'rounded-circle' %>
  <span><%= @visitor.nickname %>的订单</span>
</p>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">订单号</th>
      <th scope="col">订单价格</th>
      <th scope="col">订单状态</th>
      <th scope="col">收货地址</th>
    </tr>
  </thead>
  <tbody>
    <% @visitor.orders.each do |order|%>
      <tr>
        <th><%= link_to order.code, order_path(order) %></th>
        <td><%= order.price/100.0 %></td>
        <td><%= Order::STATUS[order.status.to_sym]%></td>
        <td><%= order.delivery_address%></td>
      </tr>
      <% end %>
  </tbody>
</table>


