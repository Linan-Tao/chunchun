<p id="notice"><%= notice %></p>

<h3>
  产品列表
  <%= link_to 'New Product', new_product_path %>
</h3>
<div class="row">
  <% @products.each do |product| %>
  <div class="col-md-4">
    <div class="card">
      <h3 class="card-header"><%= product.name%></h3>
      <div class="card-body">
        <h5 class="card-title"><%= product.price %></h5>
        <h6 class="card-subtitle text-muted"><%= product.catalog.full_name %></h6>
      </div>
      <img style="height: 100px; width: 100%; display: block;" src="<%= product.images.first if product.images %>" alt="Card image">
      <div class="card-body">
        <p class="card-text"><%= product.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <% product.tags.each do |tag|%>
          <li class="list-group-item"><%= tag.name%></li>
        <% end%>
      </ul>
      <div class="card-body">
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<br>
